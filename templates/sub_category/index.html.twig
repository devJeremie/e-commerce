{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-5">Sous Catégories</h1>

    <table class="table mt-5">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ sub_category.id }}</td>
                <td>{{ sub_category.name }}</td>
                <td>
                    <a href="{{ path('app_sub_category_show', {'id': sub_category.id}) }}">show</a>
                    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de catégorie enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_sub_category_new') }}">Crée nouvelle catégorie</a>
</div>
{% endblock %}

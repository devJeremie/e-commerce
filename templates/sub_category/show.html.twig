{% extends 'base.html.twig' %}

{% block title %}Sous-catégories{% endblock %}

{% block body %}
<div class="container">
    <h1>Sous-catégories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sub_category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sub_category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('app_sub_category_index') }}">Retour à la liste</a>

    <a class="btn btn-success" href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">Modifier</a>

    {{ include('sub_category/_delete_form.html.twig') }}
</div>    
{% endblock %}

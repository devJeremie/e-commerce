{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-5 mt-5">Produits</h1>
    <div class="row">
        {% for product in products %}
            <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('uploads/images/'~product.image)}}" class="card-img-top imgproduct w-75" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description|slice(0,60) }}...</p>
                        <a href="#" class="btn btn-outline-success">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

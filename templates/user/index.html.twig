{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-5">Liste des utilisateurs</h1>
        <table class='table'>
            <tr>
                <th>id</th>
                <th>Nom</th>
                <th>prénom</th>
                <th>Email</th>
                <th>Rôle</th>
                <th>Action</th>
            </tr>
            {% for user in users%}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                            {{ role }}
                        {% endfor %}
                    </td>
                    <td>
                        <a onclick="return confirm('Etes-vous sur d'affecter ce rôle a ce user ?')" href="{{ path('app_user_to_editor', {'id':user.id}) }}" class="btn-outline-primary">Ajouter le rôle éditeur</a>
                        <a href="" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
